PORT=3000
MONGODB_URI=mongodb://127.0.0.1:27017/auth-demo
JWT_SECRET=development-jwt-secret-2025
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration
# Get these values from Google Cloud Console (https://console.cloud.google.com)
# 1. Create a new project
# 2. Enable Google+ API
# 3. Configure OAuth consent screen
# 4. Create OAuth 2.0 credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# SMTP Configuration for Production
# These are only used when NODE_ENV=production
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password